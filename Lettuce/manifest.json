{
	"manifest_version" : 2,

	"name" : "Lettuce",
	"description" : "Twitter で URL 共有",
	"version" : "1.0.0",

	"permissions" : [
		"tabs",
		"activeTab",
		"https://*/",
		"http://*/"
	],

	"icons" : {
		"128" : "128.png",
		"48"  : "48.png",
		"16"  : "16.png"
	},

	"background" : {
		"scripts" : ["background.js"]
	},

	"browser_action" : {
		"default_icon" : "icon.png"
	}
}
