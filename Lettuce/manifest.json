{
	"manifest_version" : 3,

	"name" : "Lettuce",
	"description" : "Twitter で URL 共有",
	"version" : "2025.6.3",

	"permissions" : [
		"tabs",
		"activeTab",
		"scripting",
		"storage"
	],

	"host_permissions": [
		"https://*/",
		"http://*/"
	],


	"icons" : {
		"128" : "res/128.png",
		"48"  : "res/48.png",
		"16"  : "res/16.png"
	},

	"background" : {
		"service_worker" : "background.js"
	},

	"action" : {
		"default_icon" : "res/icon.png"
	},

  "options_page": "options.html"
}
